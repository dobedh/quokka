extend layouts/main

block content 
    .content_main
        form(action=routes.join, method="post")
            .login_group
                label(for="user_email", value="email") 이메일 
                input.login_input(type="text") 
            .login_group
                label(for="user_password") 비밀번호
                input.login_input(type="password")
            .login_group
                label(for="user_password") 비밀번호 확인
                input.login_input(type="password")
            .login_button 
                button.login_btn 회원가입
            .login_button
                button.kakao_login_btn 
                    a(href=routes.kakao).kakao_login_txt 카카오로 시작하기
            .login_button
                button.facebook_login_btn 
                    a(href=routes.facebook).facebook_login_txt 페이스북으로 시작하기


            